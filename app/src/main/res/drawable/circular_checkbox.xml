<!-- res/drawable/circular_checkbox.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#0EBC15" /> <!-- Color for checked state -->
        </shape>
    </item>
    <!-- Unchecked state -->
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/white" /> <!-- White fill for unchecked state -->
            <stroke
                android:width="8dp"
                android:color="@color/biometric_error_color" /> <!-- Colored stroke for unchecked state -->
        </shape>
    </item>
</selector>