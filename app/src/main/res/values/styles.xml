<resources>

    <style name="MyNavigationItemStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/teal_700</item> <!-- Text color -->
        <item name="android:padding">16dp</item> <!-- Padding around the text -->
        <item name="textInputStyle">@style/MyTextInputLayout</item>
    </style>

    <style name="CircularCheckboxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/circular_checkbox</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Add any custom attributes for your TextInputLayout here -->
        <item name="android:textColorHint">@color/black</item>
        <item name="hintTextAppearance">@style/MyHintTextAppearance</item>
        <!-- Add more customizations as needed -->
    </style>
    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/customButtonColor</item>

    </style>



    <style name="MyHintTextAppearance" parent="TextAppearance.Design.Hint">
        <!-- Customize the appearance of the hint text here -->
        <item name="android:textColor">@color/black</item>
        <!-- Add more customizations as needed -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- This code is for changing the color of the bar. -->

        <item name="colorPrimary">@color/teal_700</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Define other styles to fix theme -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>